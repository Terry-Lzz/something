[Unit]
Description=Start or stop the Serverstatus Server
After=rc-local.service
After=network.target
Wants=network.target


[Service]
#ExecStartPre=-/bin/sleep 60
Type=idle
User=root
Group=root
WorkingDirectory=/code
ExecStart=/usr/bin/python3 /code/client-linux.py USER=username PASSWORD=password SERVER=server PORT=port >/dev/null 2>&1
Restart=always
LimitNOFILE=512000
[Install]
WantedBy=multi-user.target